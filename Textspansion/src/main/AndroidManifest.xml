<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.designs_1393.textspansion"
	android:versionCode="19"
	android:versionName="3.0">
	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application android:label="@string/app_name" android:icon="@drawable/icon">
		<activity android:name=".Textspansion"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden"
                  android:clearTaskOnLaunch="true"
                  android:launchMode="singleTop" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/json" android:pathPattern=".*\\.json" />
            </intent-filter>
		</activity>

        <activity android:name=".Preferences"
                  android:label="@string/tab_title_settings"
                  android:configChanges="orientation|keyboardHidden" />

        <receiver android:name="LoadOnBoot">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
