<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.designs_1393.textspansion.Tutorial$PlaceholderFragment">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tutorial_image" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_skip"
            android:layout_alignBottom="@id/tutorial_image"
            android:layout_centerHorizontal="true"
            android:onClick="finishTutorial"
            android:id="@+id/tutorial_buttom" />

</RelativeLayout>
