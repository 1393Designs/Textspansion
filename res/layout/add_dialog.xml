<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView android:id="@+id/subTitleTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/sub_title"
              android:layout_marginLeft="13dp"
              android:layout_marginTop="5dp"/>

    <EditText android:id="@+id/subTitleEntry"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:imeOptions="actionNext"
              android:singleLine="true"
              android:inputType="textCapSentences"
              android:layout_below="@id/subTitleTitle"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

    <TextView android:id="@+id/pasteTextTitle" android:layout_below="@id/subTitleEntry"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/sub_paste"
              android:layout_marginLeft="13dp"/>

    <EditText android:id="@+id/pasteTextEntry"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:inputType="text|textCapSentences|textMultiLine"
              android:layout_below="@id/pasteTextTitle"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/pasteTextEntry"
                  android:orientation="horizontal"
                  android:id="@+id/pvt_layout">

        <CheckBox android:id="@+id/pvt_box"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"/>

        <TextView android:id="@+id/pvt_text"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center_vertical"
                  android:text="Private" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/pvt_layout"
                  android:orientation="horizontal">

        <Button android:id="@+id/okayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Okay!" />

        <Button android:id="@+id/cancelButton"
                android:layout_below="@id/pvt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
    </LinearLayout>
</RelativeLayout>