<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button android:id="@+id/skip_button"
    	android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Skip Tutorial"
		android:onClick="skip"
		android:layout_centerHorizontal="true"/>

    <ImageView
    	android:id="@+id/tut_image"
    	android:src="@drawable/tut_0"
    	android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/skip_button"
		android:adjustViewBounds="true" />

	<TextView
    	android:id="@+id/tokens_tut"
    	android:layout_height="564px"
		android:layout_width="480px"
		android:layout_below="@id/skip_button" 
		android:text="@string/tokens_text"
		android:paddingLeft="10dp"
		android:visibility="invisible"/>

	<Button android:id="@+id/back_button"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Back" 
		android:paddingLeft="20px"
		android:paddingRight="20px"
		android:layout_below="@id/tut_image"
		/>

	<Button android:id="@+id/next_button"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Next" 
		android:paddingLeft="20px"
		android:paddingRight="20px"
		android:layout_below="@id/tut_image"
		android:layout_toRightOf="@id/back_button"
		android:layout_alignParentRight="true"
		/>
	

</RelativeLayout>